#Testing File
TFILE = morseTest
PROJECT = morse-encode
LDFLAGS = -lm


morse-decode: $(PROJECT)
	ln -s -f $< $@

$(PROJECT): file-utils.o morse.o main.o 
	$(CC) file-utils.o morse.o main.o $(LDFLAGS) -o $@

morseTest: morse.o morseTest.o
	gcc morse.o morseTest.o $(LDFLAGS) -o $(TFILE) 

depend: 
	$(CC) -MM $(CPPFLAGS) *.c

clean:
	rm -f *.o $(TFILE)



#Dependencies generated by make depend
file-utils.o: file-utils.c file-utils.h
main.o: main.c file-utils.h morse.h
morse.o: morse.c morse.h
morseTest.o: morseTest.c morse.h  
